<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen_order.HeaderScreenOrder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_back_screen_order"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_back"
            app:layout_constraintTop_toTopOf="@id/title_screen_order"
            app:layout_constraintBottom_toBottomOf="@id/title_screen_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/title_screen_order"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/title_screen_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_screen_order"
            android:fontFamily="@font/anton"
            android:textSize="26sp"
            android:textColor="@color/off_white"
            android:layout_marginVertical="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>